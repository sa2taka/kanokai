{
  "name": "kanokai",
  "version": "1.0.0",
  "main": "dist/index.js",
  "repository": "https://github.com/sa2taka/kanokai",
  "author": "sa2taka <sa2taka@gmail.com>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint",
    "build": "esbuild --bundle src/index.ts --outdir=dist --minify --sourcemap --format=cjs --platform=node",
    "build:production": "rm -rf dist && yarn esbuild --bundle src/index.ts --outdir=dist --minify --sourcemap --format=cjs --platform=node",
    "checkType": "tsc",
    "format": "prettier -c '**/*.ts' '**/*.js' --ignore-path .gitignore & yarn eslint --fix"
  },
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "esbuild": "^0.5.4",
    "eslint": "^7.3.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.0",
    "express": "^4.17.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "supports-color": "^7.1.0",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "@line/bot-sdk": "^7.0.0",
    "global": "^4.4.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.[tj]s": "yarn lint"
  }
}