{
  "name": "kanokai",
  "version": "1.0.0",
  "main": "dist/index.js",
  "repository": "https://github.com/sa2taka/kanokai",
  "author": "sa2taka <sa2taka@gmail.com>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint",
    "build": "esbuild --bundle src/index.ts --outdir=dist --minify --sourcemap --format=cjs --platform=node",
    "build:production": "rm -rf dist && yarn esbuild --bundle src/index.ts --outdir=dist --minify --format=cjs --platform=node",
    "checkType": "tsc",
    "format": "prettier -c '**/*.ts' '**/*.js' --ignore-path .gitignore & yarn eslint --fix",
    "test": "jest",
    "deploy:webhook": "gcloud functions deploy LineWebhook --entry-point webhook --runtime nodejs12 --trigger-http --region asia-northeast1",
    "deploy:morning-call": "gcloud functions deploy MorningCall --entry-point morningCall --runtime nodejs12 --trigger-topic morning-call --region asia-northeast1"
  },
  "devDependencies": {
    "@babel/core": "^7.10.3",
    "@babel/preset-env": "^7.10.3",
    "@babel/preset-typescript": "^7.10.1",
    "@types/express": "^4.17.6",
    "@types/jest": "^26.0.0",
    "@types/node-fetch": "^2.5.7",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "babel-jest": "^26.0.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "esbuild": "^0.5.4",
    "eslint": "^7.3.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "supports-color": "^7.1.0",
    "ts-jest": "^26.1.0",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "@line/bot-sdk": "^7.0.0",
    "encoding": "^0.1.12",
    "node-fetch": "^2.6.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn checkType && yarn lint"
    }
  },
  "lint-staged": {
    "**/*.[tj]s": "yarn lint"
  }
}